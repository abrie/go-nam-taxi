<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="www.siuslam.com.namtaxiuser.PhoneActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/label"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textColor="@color/Black"/>

        <TableLayout
            android:id="@+id/TBL0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/number_one"
                    android:text="1 " />

                <Button
                    android:id="@+id/number_two"
                    android:text="2 ABC" />

                <Button
                    android:id="@+id/number_three"
                    android:text="3 DEF " />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/number_four"
                    android:text="4 GHI" />

                <Button
                    android:id="@+id/number_five"
                    android:text="5 JKL" />

                <Button
                    android:id="@+id/number_six"
                    android:text="6 MNO" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/number_seven"
                    android:text="7 PQRS" />

                <Button
                    android:id="@+id/number_eight"
                    android:text="8 TUV" />

                <Button
                    android:id="@+id/number_nine"
                    android:text="9 WXYZ" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/number_star"
                    android:text="* P(,)" />

                <Button
                    android:id="@+id/number_zero"
                    android:text="0 +" />

                <Button
                    android:id="@+id/number_hash"
                    android:text="#" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/number_spazza"
                    android:text=""
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/number_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_call_black_24dp" />

                <ImageButton
                    android:id="@+id/number_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_backspace_black_24dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</RelativeLayout>
